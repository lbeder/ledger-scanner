{
  "name": "ledger-scanner",
  "version": "0.18.0",
  "description": "Ledger Scanner is a privacy-focused tool designed for enumerating Ledger wallet addresses based on custom derivation path templates",
  "author": "Leonid Beder",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "bin": {
    "crypto-scanner": "./dist/index.js"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "pnpm eslint src",
    "format": "prettier --check --config .prettierrc --write src/**/*",
    "prepare": "pnpm snyk-protect",
    "release": "pnpm build && pnpm prepare",
    "snyk-protect": "snyk-protect",
    "snyk-test": "snyk test",
    "postinstall": "pnpm rebuild-native",
    "rebuild-native": "pnpm rebuild node-hid"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@snyk/protect": "^1.1300.0",
    "@types/cli-progress": "^3.11.6",
    "@types/cli-table": "^0.3.4",
    "@types/decimal.js": "^7.4.3",
    "@types/hdkey": "^2.1.0",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.7.2",
    "@types/yargs": "^17.0.33",
    "chalk": "^4.1.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-package-json": "^2.8.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^6.46.0",
    "@ledgerhq/hw-transport-node-hid": "^6.29.13",
    "cli-progress": "^3.12.0",
    "cli-table": "^0.3.11",
    "decimal.js": "^10.6.0",
    "ethers": "^6.15.0",
    "hdkey": "^2.1.0",
    "lodash": "^4.17.21",
    "yargs": "^17.7.2"
  },
  "optionalDependencies": {
    "node-hid": "^2.1.2"
  }
}
